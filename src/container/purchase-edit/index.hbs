<main class="main">
	{{#with data}}
	<form method="POST" action="/purchase-update?id={{id}}" class="form-card">

		{{> heading title="Зміна данних"}}

		<div class="field__id">
			<div class="title">ID:</div>
			<div>{{id}}</div>
		</div>

		<div class="field__position">
			{{> field label="Призвіще" name="lastname" value=lastname}}

			{{> field label="Ім'я" name="firstname" value=firstname}}

			{{> field label="Електронна пошта" name="email" value=email}}

			{{> field label="Мобільний телефон" name="phone" value=phone}}
		</div>

		{{> button text='Зберегти зміни'}}
		{{/with}}
</main>