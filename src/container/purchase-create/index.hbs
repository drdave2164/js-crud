<main class="main">
	{{#with data}}
	<form method="POST" action="/purchase-submit?id={{id}}" class="form-card">

		{{> heading title="Ваше замовлення"}}

		<ul class="cart">
			{{#each cart}}
			<li class="cart__item">
				<span>{{text}}</span>
				<span class="cart__price">{{price}} ₴</span>
			</li>
			{{/each}}
		</ul>

		{{> divider}}

		{{> heading info="Оформлення замовлення"}}

		<div class="field__position">
			{{> field label="Призвіще" name="lastname"}}

			{{> field label="Ім'я" name="firstname"}}

			{{> field label="Мобільний телефон" name="phone"}}

			{{> field label="Електронна пошта" name="email"}}
		</div>

		<div class="field__textarea">
			<label for="comment" class="field__label">Коментар</label>
			<textarea type="text" name="comment" class="field__input"></textarea>
			<span class="field__info">Коментар буде передано кур’єру</span>
		</div>

		<div class="field__position">
			{{> field label="Списати бонуси" name="bonus"}}

			{{> field label="Промо-код" name="promocode"}}
		</div>

		{{>divider}}

		{{> field value=totalPrice name="totalPrice" disabled=true}}
		{{> field value=productPrice name="productPrice" disabled=true}}
		{{> field value=deliveryPrice name="deliveryPrice" disabled=true}}
		{{> field value=amount name="amount" disabled=true}}
		<strong class="form-card__total">
			Всього:{{totalPrice}}₴ (+{{bonus}}₴ на бонусний рахунок)
		</strong>

		{{> button text='Оформити замовлення'}}
		{{/with}}
</main>