<main class="main">
	<section>
		<h1 class="title">Створення товару</h1>
		<form method="post" action="product-create">
			<div class="form">
				<div class="form__title">Інформація про товар</div>
				<div class="form__content">
					<div class="form__input__group">
						<div class="form__field">
							<label for="name" class="form__label">Назва товару</label>
							<input type="text" name="name" class="form__input" required>
						</div>
						<div class="form__field">
							<label for="price" class="form__label">Ціна</label>
							<input type="text" name="price" class="form__input" required>
						</div>
					</div>
					<div class="form__field">
						<label for="description" class="form__label">Короткий опис товару</label>
						<textarea type="text" name="description" class="form__input form__textarea"
							id="description"></textarea>
						<span class="form__info">Відображується у картці товару</span>
					</div>
					<button class="form__button">Створити товар</button>
				</div>
			</div>
		</form>
	</section>
</main>